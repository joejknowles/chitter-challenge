<div id='cheeps'>
  <% @cheeps.reverse_each do |cheep| %>
    <div class='cheep'>
      <div class='author'>
        <%= "#{cheep.user.username} cheeped:" %>
      </div>
      <div class='message'>
        <%= cheep.message %>
      </div>
      <div class='time'>
        <%= ((Time.now - cheep.time_stamp) / 60).floor %> minutes ago.
      </div>
      <div class='applause'>
        <%= cheep.applause.length %> applause
        <% if @user && !@user.applause.any? { |ap| ap.cheep_id == cheep.id } %>
          <form action='./cheeps/applaud' method='post'>
            <button name='cheepid'value="<%= cheep.id %>">Applaud</button>
          </form>
        <% end %>
      </div>
    </div>
  <% end %>
</div>