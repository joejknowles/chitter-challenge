<% if @user %>
  <div id='send-cheep'>
    <form action='/cheeps/new' method='post'>
      <input name='cheep' placeholder="What's chappening?">
      <button>Cheep</button>
    </form>
  </div>
<% end %>
<div id='cheeps'>
  <% Cheep.all.reverse_each do |cheep| %>
    <div class='cheep'>
      <div class='author'>
        <%= "#{cheep.user.username} cheeped:" %>
      </div>
      <div class='message'>
        <%= cheep.message %>
      </div>
    </div>
  <% end %>
</div>